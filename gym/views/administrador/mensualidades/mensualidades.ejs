<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Selecciona tu Plan de Mensualidad</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.3/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      /* Estilos del carrusel */
      .carrusel {
        display: flex;
        overflow-x: hidden;
        scroll-behavior: smooth;
        transition: transform 0.5s ease-in-out;
      }

      .carrusel-item {
        min-width: 100%;
        flex: 0 0 100%;
        padding: 2rem;
        box-sizing: border-box;
      }

      /* Estilos de las tarjetas de mensualidades */
      .tarjeta {
        background: linear-gradient(135deg, #1e3a8a, #6d28d9);
        border-radius: 1rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        color: white;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        height: 400px;
        max-width: 300px;
        margin: auto;
        text-align: center;
      }

      .tarjeta h2 {
        font-size: 2.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      }

      .tarjeta p {
        font-size: 1.5rem;
        font-weight: 400;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
      }

      .tarjeta button {
        background-color: #00a650;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        text-align: center;
        font-weight: 600;
        color: white;
        transition: background-color 0.3s ease-in-out;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
      }

      .tarjeta button:hover {
        background-color: #008f3e;
      }

      /* Tipografía legible y centrada */
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-900 text-white">
    <!-- Logo del gimnasio -->
    <div
      class="w-full bg-gradient-to-r from-blue-700 to-purple-900 p-4 flex items-center justify-between"
    >
      <img
        src="https://raw.githubusercontent.com/JeanCardozo/audios/main/logo.png"
        alt="Logo del Gimnasio"
        class="h-16"
      />
      <a
        href="/cancelar?tempRegistroId=<%= tempRegistroId %>"
        class="text-white font-bold hover:text-red-400"
      >
        Cancelar
      </a>
    </div>

    <div class="container mx-auto mt-10">
      <h1 class="text-5xl font-bold text-center mb-8">
        Selecciona tu Plan de Mensualidad
      </h1>

      <!-- Carrusel -->
      <div class="relative">
        <div class="carrusel" id="carrusel">
          <% mensualidades.forEach(function(mensualidad) { %>
          <div class="carrusel-item flex justify-center items-center">
            <div class="tarjeta">
              <h2><%= mensualidad.tiempo_plan %></h2>
              <p>Precio: $<%= mensualidad.total_pagar %></p>
              <form action="/create-order" method="POST">
                <input
                  type="hidden"
                  name="title"
                  value="<%= mensualidad.tiempo_plan %>"
                />
                <input
                  type="hidden"
                  name="unit_price"
                  value="<%= mensualidad.total_pagar %>"
                />
                <input
                  type="hidden"
                  name="tempRegistroId"
                  value="<%= tempRegistroId %>"
                />
                <button type="submit">Pagar con Mercado Pago</button>
              </form>
            </div>
          </div>
          <% }) %>
        </div>

        <!-- Botones de navegación manual -->
        <button
          class="absolute left-0 top-0 bottom-0 px-4 text-gray-400 hover:text-gray-200 focus:outline-none"
          onclick="moverCarrusel(-1)"
        >
          <svg
            class="w-10 h-10"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            ></path>
          </svg>
        </button>

        <button
          class="absolute right-0 top-0 bottom-0 px-4 text-gray-400 hover:text-gray-200 focus:outline-none"
          onclick="moverCarrusel(1)"
        >
          <svg
            class="w-10 h-10"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </button>
      </div>
    </div>

    <script>
      const carrusel = document.getElementById("carrusel");
      let scrollPosition = 0;

      function moverCarrusel(direction) {
        const width = carrusel.clientWidth;
        scrollPosition += direction * width;
        if (scrollPosition < 0) scrollPosition = 0;
        if (scrollPosition > carrusel.scrollWidth - width) scrollPosition = 0;
        carrusel.scrollTo({
          left: scrollPosition,
          behavior: "smooth",
        });
      }

      // Transición automática cada 5 segundos
      setInterval(() => {
        moverCarrusel(1);
      }, 5000);
      // Mostrar alertas si están disponibles
      `<% if (typeof alertTitle !== "undefined") { %>`;
      Swal.fire({
        title: "<%= alertTitle %>",
        text: "<%= alertMessage %>",
        icon: "<%= alertIcon %>",
        showConfirmButton: "<%= showConfirmButton %>",
      });
      `<% } %>`;
    </script>
  </body>
</html>
