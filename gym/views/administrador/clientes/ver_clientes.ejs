<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../../src/output.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.16/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Ver clientes</title>
  </head>
  <body>
    <div class="w-full bg-blue-500">
      <h1 class="text-6xl text-center">CLIENTES</h1>
    </div>
    <div class="container mx-auto mt-4">
      <input
        type="text"
        id="inputSearch"
        class="form-input mr-2 mb-4 w-full p-2 border border-gray-300"
        placeholder="Buscar cliente..."
      />
      <a
        href="/create_clientes"
        class="btn border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white mt-4 inline-flex items-center"
        ><i class="bx bx-plus-circle br-md mr-2"></i> Crear Cliente</a
      >
      <a
        href="/index_admin"
        class="btn border border-red-500 text-white bg-red-500 hover:bg-red-700 mt-4 ml-2 inline-flex items-center"
      >
        Volver</a
      >
      <div class="overflow-x-auto mt-4">
        <table class="min-w-full bg-white border border-gray-300">
          <thead class="bg-blue-500">
            <tr>
              <th scope="col" class="text-red-800 px-4 py-2">IDENTIFICACION</th>
              <th scope="col" class="px-4 py-2">NOMBRE</th>
              <th scope="col" class="px-4 py-2">APELLIDO</th>
              <th scope="col" class="px-4 py-2">EDAD</th>
              <th scope="col" class="px-4 py-2">SEXO</th>
              <th scope="col" class="px-4 py-2">FECHA DE INSCRIPCION</th>
              <th scope="col" class="px-4 py-2">CORREO</th>
              <th scope="col" class="px-4 py-2">TELEFONO</th>
              <th scope="col" class="px-4 py-2">MENSUALIDAD</th>
              <th scope="col" class="px-4 py-2">TOTAL A PAGAR</th>
              <th scope="col" class="px-4 py-2">ESTADO</th>
              <th scope="col" class="px-4 py-2">USUARIO</th>
              <th scope="col" class="px-4 py-2">TALLAS</th>
              <th scope="col" class="px-4 py-2">ACCIONES</th>
            </tr>
          </thead>
          <tbody>
            <% results.forEach((user) => { %>
            <tr class="border-t">
              <td class="px-4 py-2 text-center"><%= user.id %></td>
              <td class="px-4 py-2 text-center"><%= user.nombre %></td>
              <td class="px-4 py-2 text-center"><%= user.apellido %></td>
              <td class="px-4 py-2 text-center"><%= user.edad %></td>
              <td class="px-4 py-2 text-center"><%= user.sexo %></td>
              <td class="px-4 py-2 text-center">
                <%= user.fecha_de_inscripcion %>
              </td>
              <td class="px-4 py-2 text-center">
                <%= user.correo_electronico %>
              </td>
              <td class="px-4 py-2 text-center"><%= user.numero_telefono %></td>
              <td class="px-4 py-2 text-center"><%= user.tiempo_plan %></td>
              <td class="px-4 py-2 text-center"><%= user.total_pagar %></td>
              <td
                class="px-4 py-2 text-center <%= user.estado === 'Inactivo' ? 'border border-red-500 text-red-500' : 'border border-green-500 text-green-500' %>"
              >
                <%= user.estado %>
              </td>
              <td class="px-4 py-2 text-center"><%= user.nom_usu %></td>
              <td class="px-4 py-2 text-center">
                <a
                  href="/actualizar_tallas/<%= user.id %>"
                  class="btn border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white"
                  >Ver</a
                >
              </td>
              <td class="px-4 py-2 text-center">
                <a
                  href="/actualizar_clientes/<%= user.id %>"
                  class="btn border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white"
                  >Editar</a
                >
                <% if (user.estado === 'Inactivo') { %>
                <form action="/activarcliente" method="post" class="inline">
                  <input type="hidden" name="id" value="<%= user.id %>" />
                  <button
                    type="submit"
                    class="btn border border-green-500 text-green-500 hover:bg-green-500 hover:text-white"
                  >
                    Activar
                  </button>
                </form>
                <% } else if (user.estado === 'Activo') { %>
                <form action="/desactivarcliente" method="post" class="inline">
                  <input type="hidden" name="id" value="<%= user.id %>" />
                  <button
                    type="submit"
                    class="btn border border-red-500 text-red-500 hover:bg-red-500 hover:text-white"
                  >
                    Desactivar
                  </button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      document
        .getElementById("inputSearch")
        .addEventListener("keyup", buscador_interno);
      function buscador_interno() {
        const filter = inputSearch.value.toUpperCase();
        const rows = document.querySelectorAll("table tbody tr");
        rows.forEach((row) => {
          const textValue = row.innerText.toUpperCase();
          if (textValue.indexOf(filter) > -1) {
            row.style.display = "";
          } else {
            row.style.display = "none";
          }
        });
      }
    </script>
  </body>
</html>
