<head>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&display=swap");
    * {
      font-family: "Lexend Deca", sans-serif;
    }

    .bg-fondo {
      background-image: url("https://raw.githubusercontent.com/JeanCardozo/audios/main/fondo.jpeg");
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      min-height: 100vh;
      width: 100%;
      height: 100%;
    }
  </style>
</head>

<nav class="bg-white-600 shadow-md">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0 flex items-center">
        <img
          src="https://raw.githubusercontent.com/JeanCardozo/audios/main/logo.png"
          alt="Logo"
          class="w-auto h-16 max-w-[150px] my-2 ml-2"
        />
      </div>

      <div class="hidden sm:flex sm:space-x-8">
        <a
          href="/mis_planes"
          class="hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium"
          >Mis Planes</a
        >
        <a
          href="/info_personal"
          class="hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium"
          >Informacion</a
        >
        <a
          href="/ayuda"
          class="hover:bg-gray-100 px-3 py-2 rounded-md text-sm font-medium"
          >Ayuda
        </a>
      </div>

      <div class="flex items-center space-x-4">
        <div class="relative">
          <button
            id="profileButton"
            class="flex items-center focus:outline-none"
          >
            <img
              src="https://raw.githubusercontent.com/JeanCardozo/audios/main/acceso.png"
              alt="Perfil"
              class="h-10 w-10 rounded-full border-2 border-white"
            />
          </button>
          <div
            id="profileDropdown"
            class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden text-gray-700"
          >
            <% if (userData) { %>
            <div class="p-4 border-b">
              <p class="font-semibold">Hola, <%= userData.nombre_usuario %></p>
              <p class="text-sm text-gray-600"><%= userData.rol %></p>
            </div>
            <% } else { %>
            <p class="p-4 text-gray-600">Sin información</p>
            <% } %>
          </div>
          <a
            href="/logout"
            class="block px-4 py-2 text-sm hover:bg-gray-100 transition-colors"
            >Cerrar sesión</a
          >
        </div>
      </div>
    </div>
  </div>
</nav>
