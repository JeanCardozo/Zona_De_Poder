<style>
  #sidebar::-webkit-scrollbar {
    width: 0px;
    background: transparent;
  }

  #sidebar {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const sidebar = document.getElementById("sidebar");
    sidebar.style.overflowY = "scroll";
    sidebar.style.scrollbarWidth = "none";
    sidebar.style.msOverflowStyle = "none";
  });
</script>
<nav class="shadow-lg bg-gray-200 border-b">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 p-1">
    <div class="flex justify-between h-16">
      <div class="flex"></div>
      <div class="flex items-center justify-center w-full p-4">
        <form class="flex w-full relative" onsubmit="return false;">
          <input
            type="text"
            id="searchInput"
            placeholder="¿Qué deseas buscar?..."
            class="w-full bg-gray-200 form-input rounded-md shadow-sm border-gray-500 placeholder-gray-500 p-2 pr-10"
          />
          <button
            id="searchButton"
            class="absolute right-0 top-0 h-full px-3 text-gray-400 hover:text-gray-600"
            type="submit"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
          </button>
        </form>
        <script>
          const userData = <%- JSON.stringify(userData || null) %>;
          console.log("Datos del usuario en el cliente:", userData);
        </script>
        <!-- Diseño para la foto de perfil del usuario -->
        <div class="relative ml-4">
          <button
            id="profileButton"
            class="flex items-center focus:outline-none"
            onclick="toggleProfileDropdown()"
          >
            <img
              src="<%= userData && userData.imagen_perfil ? userData.imagen_perfil : 'https://raw.githubusercontent.com/JeanCardozo/audios/main/acceso.png' %>"
              alt="Perfil"
              class="h-10 w-10 rounded-full object-cover"
              onerror="this.src='https://raw.githubusercontent.com/JeanCardozo/audios/main/acceso.png';"
            />
          </button>
          <div
            id="profileDropdown"
            class="absolute right-0 mt-2 w-40 bg-white rounded-sm shadow-md hidden text-sm"
          >
            <% if (userData) { %>
            <div class="p-2 border-b">
              <p class="font-semibold">Hola, <%= userData.nombre_usuario %></p>
              <p class="text-gray-600"><%= userData.rol %></p>
            </div>
            <% } else { %>
            <p class="p-2 text-gray-600">Sin información</p>
            <% } %>
            <a
              href="/logout"
              class="block p-2 text-gray-700 hover:bg-gray-100 transition-colors"
              >Cerrar sesión</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  function toggleProfileDropdown() {
    const dropdown = document.getElementById("profileDropdown");
    dropdown.classList.toggle("hidden");
  }
</script>

