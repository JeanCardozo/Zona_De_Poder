<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Información de Clientes</title>
    <!-- Tailwind CSS -->
    <link
      rel="shortcut icon"
      href="https://raw.githubusercontent.com/JeanCardozo/audios/main/z.png"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.16/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../../../src/output.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      .btn-confirmar {
        background-color: rgb(16, 13, 197);
        color: white;
      }
      .btn-confirmar:hover {
        background-color: rgb(15, 12, 164);
      }
      .btn-cancelar {
        background-color: red;
        color: white;
      }
      .btn-cancelar:hover {
        background-color: #c53222c4;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <%- include('../../administrador/plantillas/navbar_clientes.ejs') %>
    <div class="bg-gray-100 min-h-screen">
      <div class="max-w-5xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-extrabold text-gray-900 mb-8 text-center">
          Mi Información
        </h1>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-8">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Identificación
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Nombre
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Apellido
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Telefono
                </th>
                <th
                  scope="col"
                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                >
                  Correo
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% results.forEach(function(cliente) { %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= cliente.id %>
                </td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"
                >
                  <%= cliente.nombre %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= cliente.apellido %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= cliente.numero_telefono %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= cliente.correo_electronico %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="flex justify-end space-x-4">
          <a
            href="#"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 updateInformacionBtn"
            data-id="<%= cliente.id %>"
          >
            <svg
              class="mr-2 -ml-1 h-5 w-5"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                clip-rule="evenodd"
              />
            </svg>
            Editar
          </a>
          <% }); %>
          <a
            href="/clientes/index_c"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            Volver
          </a>
        </div>
      </div>
    </div>
    <script>
      document.querySelectorAll(".updateInformacionBtn").forEach((button) => {
        button.addEventListener("click", function (e) {
          e.preventDefault();
          const clientId = this.dataset.id;
          fetch(`/info_cliente/${clientId}`)
            .then((response) => response.json())
            .then((data) => {
              if (data.error) {
                Swal.fire("Error", data.error, "error");
              } else {
                const cliente = data.datosCliente[0]; // Acceder al primer cliente del array
                Swal.fire({
                  title: "Actualizar información",
                  html: `
                <form id="updateInformacionForm" action="/actualizar_informacion" method="post">
                  <input type="hidden" name="id" value="${clientId}">
                  <div class="mb-3">
                    <label for="nombre" class="block text-sm font-medium text-gray-700">Nombre</label>
                    <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" id="nombre" name="nombre" value="${cliente.nombre}" required>
                  </div>
                  <div class="mb-3">
                    <label for="apellido" class="block text-sm font-medium text-gray-700">Apellido</label>
                    <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" id="apellido" name="apellido" value="${cliente.apellido}" required>
                  </div>
                  <div class="mb-3">
                    <label for="numero_telefono" class="block text-sm font-medium text-gray-700">Número de Teléfono</label>
                    <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" id="numero" name="numero" value="${cliente.numero_telefono}" required>
                  </div>
                  <div class="mb-3">
                    <label for="correo_electronico" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                    <input type="text" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" id="correo" name="correo" value="${cliente.correo_electronico}" required>
                  </div>
                </form>
              `,
                  confirmButtonClass: "btn-confirmar",
                  cancelButtonClass: "btn-cancelar",
                  customClass: {
                    confirmButton: "btn-confirmar",
                    cancelButton: "btn-cancelar",
                  },
                  showCancelButton: true,
                  confirmButtonText: "Guardar",
                  cancelButtonText: "Cancelar",
                  preConfirm: () => {
                    const nombreInput = document.getElementById("nombre");
                    const apellidoInput = document.getElementById("apellido");
                    const correoInput = document.getElementById("correo");
                    const numeroInput = document.getElementById("numero");
                    if (!nombreInput.value) {
                      Swal.showValidationMessage(
                        "Por favor, ingrese el nombre"
                      );
                      return false;
                    } else {
                      if (!apellidoInput.value) {
                        Swal.showValidationMessage(
                          "Por favor, ingrese el apellido"
                        );
                        return false;
                      } else {
                        if (!correoInput.value) {
                          Swal.showValidationMessage(
                            "Por favor, ingrese el correo"
                          );
                          return false;
                        } else {
                          if (!numeroInput.value) {
                            Swal.showValidationMessage(
                              "Por favor, ingrese el numero"
                            );
                            return false;
                          } else {
                            document
                              .getElementById("updateInformacionForm")
                              .requestSubmit();
                          }
                        }
                      }
                    }
                  },
                });
              }
            })
            .catch((error) => {
              console.error("Error:", error);
              Swal.fire(
                "Error",
                "Ocurrió un error al obtener los datos del cliente",
                "error"
              );
            });
        });
      });
    </script>
    <footer id="footer" class="bg-gray-800 text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-3xl font-bold mb-4">
              <a href="/logout">Zona de Poder<sup>&reg;</sup></a>
            </h3>
            <ul class="space-y-2">
              <li>Teléfono: +57 123 456 7890</li>
              <li>Dirección: Calle Principal #123, Ciudad</li>
            </ul>
          </div>
          <div>
            <h4 class="text-xl font-semibold mb-4">Enlaces útiles</h4>
            <ul class="space-y-2">
              <li>
                <a
                  href="#"
                  class="hover:text-yellow-400 transition duration-300"
                  >Política de privacidad</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="hover:text-yellow-400 transition duration-300"
