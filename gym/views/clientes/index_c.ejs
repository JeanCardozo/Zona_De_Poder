<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zona de Poder</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.16/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <!-- Verificación de datos para cambiar el color de fondo -->
  <body
    class="<%= (typeof pesos === 'undefined' || pesos.length === 0 || !tallaReciente || !tallaReciente.peso) ? 'bg-black' : 'bg-gray-100' %>"
    id="bodyElement"
  >
    <script>
      // En el cliente, verificamos nuevamente por si acaso
      if (!<%= tallaReciente ? tallaReciente.peso : "null" %>) {
        document.getElementById('bodyElement').classList.add('bg-black');
      }
    </script>

    <%- include('../administrador/plantillas/navbar_clientes.ejs') %>

    <div class="container mx-auto p-4">
      <!-- Canvas 1 -->
      <div class="mb-6">
        <div class="h-80 w-full">
          <canvas id="myChart1"></canvas>
        </div>
      </div>

      <div class="grid grid-cols-1 gap-6">
        <!-- Tabla de medidas recientes -->
        <div class="bg-white shadow-md rounded-lg p-4">
          <h2 class="text-xl font-semibold mb-4">Medidas Recientes</h2>
          <table class="min-w-full bg-white border border-gray-200 rounded-lg">
            <thead class="bg-gray-200 text-gray-600">
              <tr>
                <th class="px-4 py-2">MEDIDA DEL PECHO</th>
                <th class="px-4 py-2">MEDIDA DEL BRAZO</th>
                <th class="px-4 py-2">MEDIDA CINTURA</th>
                <th class="px-4 py-2">MEDIDA ABDOMEN</th>
                <th class="px-4 py-2">MEDIDA CADERA</th>
                <th class="px-4 py-2">MEDIDA PIERNA</th>
                <th class="px-4 py-2">MEDIDA PANTORRILLA</th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% if (tallaReciente) { %>
              <tr class="border-b">
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_pecho %>
                </td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_brazo %>
                </td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_cintura %>
                </td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_abdomen %>
                </td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_cadera %>
                </td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_pierna %>
                </td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.medida_pantorrilla %>
                </td>
              </tr>
              <% } else { %>
              <tr>
                <td colspan="7" class="px-4 py-2 text-center">
                  No se encontraron tallas recientes.
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Tabla de peso, altura y IMC -->
        <div class="bg-white shadow-md rounded-lg p-4">
          <h2 class="text-xl font-semibold mb-4">Datos de IMC</h2>
          <table class="min-w-full bg-white border border-gray-200 rounded-lg">
            <thead class="bg-gray-200 text-gray-600">
              <tr>
                <th class="px-4 py-2">PESO</th>
                <th class="px-4 py-2">ALTURA</th>
                <th class="px-4 py-2">IMC</th>
                <th class="px-4 py-2">Resultado</th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% if (tallaReciente) { %>
              <tr class="border-b">
                <td class="px-4 py-2 text-center"><%= tallaReciente.peso %></td>
                <td class="px-4 py-2 text-center">
                  <%= tallaReciente.altura %>
                </td>
                <td class="px-4 py-2 text-center"><%= imc %></td>
                <td class="px-4 py-2 text-center"><%= resultadoIMC %></td>
              </tr>
              <% } else { %>
              <tr>
                <td colspan="4" class="px-4 py-2 text-center">
                  No se encontraron tallas recientes.
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script>
      const ctx1 = document.getElementById("myChart1");

      // Verifica y usa las variables que se pasan desde el servidor
      const fechasData = "<%= typeof fechas !== 'undefined' ? fechas : '[]' %>";
      const pesos = <%= typeof pesos !== 'undefined' ? JSON.stringify(pesos) : '[]' %>;
      const fechas = fechasData.split(',');
      console.log(fechas);
      console.log(pesos);

      const labels = fechas;

      const data = {
        labels: labels,
        datasets: [{
          label: 'Mi peso',
          data: pesos,
          fill: false,
          borderColor: 'rgb(75, 192, 192)', // Color base de la línea
          tension: 0.1,
          segment: {
            borderColor: (ctx) => {
              const index = ctx.p1DataIndex;
              const prevValue = ctx.chart.data.datasets[0].data[index - 1];
              const currValue = ctx.chart.data.datasets[0].data[index];

              // Si no hay valor anterior, usa el color base
              if (index === 0) return 'rgb(75, 192, 192)';

              // Si el valor actual es mayor, usa verde; si es menor, usa rojo; si es igual, usa azul
              if (currValue > prevValue) {
                return 'green';
              } else if (currValue < prevValue) {
                return 'red';
              } else {
                return 'blue'; // Si el peso se mantiene igual, usa azul
              }
            }
          }
        }]
      };

      const config = {
        type: 'line',
        data: data,
      };

      new Chart(ctx1, config);
    </script>
  </body>
</html>
